+HAVE_SYS_MMAN_H
+HAVE_PROCESS_H
+HAVE_ALARM
+HAVE_GMTIME_R
+HAVE_ICONV
+HAVE_MEMSET
+HAVE_MMAP
+HAVE_MUNMAP
+HAVE_REALLOC
+HAVE_STRCHR
+HAVE_STRCHR_R
+HAVE_STRERROR
+HAVE_STRERROR_R
+HAVE_STRTOL
+HAVE_TIMEGM
+HAVE_VPRINTF
+
+HAVE__BOOL
+HAVE_LENSDATA
+EXIV2_ENABLE_NLS
+HAVE_DECL_STRERROR_R
+HAVE_PRINTUCS2
+HAVE_LIBZ
+HAVE_XMP_TOOLKIT
+PACKAGE_BUGREPORT
+PACKAGE
