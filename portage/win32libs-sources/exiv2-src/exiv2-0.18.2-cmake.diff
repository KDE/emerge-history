+HAVE_INTTYPES_H
+HAVE_LIBINTL_H
+HAVE_MALLOC_H
+HAVE_MEMORY_H
+HAVE_ICONV_H
+HAVE_STDBOOL_H
+HAVE_STDINT_H
+HAVE_STDLIB_H
+HAVE_STRING_H
+HAVE_STRINGS_H
+HAVE_UNISTD_H
+HAVE_WCHAR_H
