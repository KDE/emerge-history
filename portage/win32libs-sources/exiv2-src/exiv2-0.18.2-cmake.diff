+    set( EXV_ICONV_CONST "const" )
+else( CONST_ICONV )
+    set( EXV_ICONV_CONST "const" )
+endif( CONST_ICONV )
+
+# for msvc define to int in exv_conf.h
+if( NOT MSVC )
+    set( HAVE_PID_T TRUE )
+endif( NOT MSVC )
+
