<?xml version="1.0" encoding="UTF-8"?>
<module name="mysql">
    <package name="mysql-server">
        <shortDescription>the mysql server and some management tools</shortDescription>
		<part name="runtime">
			<files include="bin/.*(bug25|comp|echo|my_print|perror|replace|resolveip).*exe"/>
			<files exclude="bin/.*debug.*\.exe"/>
			<files include="bin/.*mysql.*(exe|dll)"/>
			<files exclude="bin/.*mysqld.*dll"/>
			<files include="bin/.*myisam.*exe"/>
			<files include="data/mysql.*"/>
			<files include="Docs/.*(manual|INSTALL|COPYING|ChangeLog).*"/>
			<files include="scripts/.*"/>
			<files include="share/(?!license).*"/>
			<files include="share/license/mysql-server/.*"/>
		</part>
		<part name="development">
			<files include="include/.*\.h"/>
			<files include="lib/.*.*mysql(?![d]).*"/>
		</part>
    </package>
    <package name="mysql-embedded">
        <shortDescription>the embedded version of the mysql server</shortDescription>
		<part name="runtime">
			<files include="bin/.*mysqld.dll"/>
		</part>
		<part name="development">
			<files include="include/.*\.h"/>
			<files include="lib/.*.*mysqld.*"/>
			<files include="share/license/mysql-embedded/.*"/>
		</part>
    </package>
    <package name="mysql-debug">
        <shortDescription>some debug files for mysql server and some more management tools</shortDescription>
		<part name="runtime">
			<files include="bin/.*(debug).*exe"/>
			<files include="bin/.*(pdb|map|exp)"/>
			<files include="data/test/.*"/>
			<files include="Docs/.*ini"/>
			<files include="mysql-test/.*"/>
			<files include="share/license/mysql-debug/.*"/>
			<files include="sql-bench/.*"/>
		</part>
		<part name="development">
		</part>
    </package>
    <files exclude=".*manifest/.*"/>
</module>
